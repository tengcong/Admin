<%= render "shared/vr_header" %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <table class='table'>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_articles.each do |admin_article| %>
        <tr>
          <td><%= admin_article.title %></td>
          <td><%= link_to 'Show', [:admin, admin_article] %></td>
          <td><%= link_to 'Edit', edit_admin_article_path(admin_article) %></td>
          <td><%= link_to 'Destroy', [:admin, admin_article], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_admin_article_path %>
</div>
